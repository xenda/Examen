<h1>Listing agreements</h1>

<table>
  <tr>
    <th>Starting at</th>
    <th>Ending at</th>
    <th>Kind</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @agreements.each do |agreement| %>
  <tr>
    <td><%= agreement.starting_at %></td>
    <td><%= agreement.ending_at %></td>
    <td><%= agreement.kind %></td>
    <td><%= agreement.quantity %></td>
    <td><%= link_to 'Show', agreement %></td>
    <td><%= link_to 'Edit', edit_agreement_path(agreement) %></td>
    <td><%= link_to 'Destroy', agreement, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

